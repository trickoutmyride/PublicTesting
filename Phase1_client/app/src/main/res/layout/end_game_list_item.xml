<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/end_game_list_item_layout"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_grey_background"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/end_game_list_item_username"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="username"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/end_game_list_item_points_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Points:"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/end_game_list_item_points"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="0"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/end_game_list_item_routes_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="Route Points:"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/end_game_list_item_routes_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="0"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/end_game_list_item_longest_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="Longest Route?"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/end_game_list_item_longest_yn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/end_game_list_item_longest_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginStart="10dp"
            android:visibility="gone"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/end_game_list_item_dest_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Destination Cards"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/end_game_list_item_dest_finished_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="Completed Points:"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/end_game_list_item_dest_finished_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="0"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/end_game_list_item_dest_failed_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="Failed Points:"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/end_game_list_item_dest_failed_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@android:color/black" />


    </LinearLayout>

</LinearLayout>