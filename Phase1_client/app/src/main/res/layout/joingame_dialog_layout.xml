<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/primary_background">

        <TextView
            android:id="@+id/join_game_dialog_label"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/dark_background"
            android:ems="10"
            android:text="@string/color_selection_label"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:id="@+id/player_color_options"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player_color_label_2"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginEnd="10dp"
                android:text="@string/player_color_label"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:visibility="visible" />

            <Spinner
                android:id="@+id/player_color_spinner_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="@android:color/white" />

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>